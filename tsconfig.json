{
    "compileOnSave": false,
    "compilerOptions": {
        "declaration": false,
        "outDir": "build",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "lib": ["dom", "dom.iterable", "scripthost", "es6"],
        "target": "es5",
        "jsx": "react",
        "sourceMap": true
    },
    "include": [
        "web/**/*",
        "server/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
